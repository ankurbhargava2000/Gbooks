
@model IEnumerable<GarmentSoft.Models.acc_transactions>

@{
    ViewBag.Title = "Journal Entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption font-red-sunglo">
            <i class="icon-speech font-red-sunglo"></i>
            <span class="caption-subject bold uppercase">Journal Entry</span>
        </div>
        <div class="actions">
            <a href="@Url.Action("Create")" class="btn btn-circle btn-default">
                <i class="fa fa-plus"></i> New
            </a>
            <a class="btn btn-circle btn-icon-only btn-default fullscreen" href="javascript:;" data-original-title="" title="">
            </a>
        </div>
    </div>
    <div class="portlet-body">
        <table class="jTable table table-striped table-advance table-hover">
            <thead>
                <tr>
                    <th>
                        Voucher Number
                    </th>
                    <th>
                        Voucher Type
                    </th>
                    <th>
                        Voucher Date
                    </th>
                    <th class="hidecol">
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.voucher_no)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VoucherType.VoucherName)
                        </td>
                        <td>
                            @item.voucher_date.ToString("dd/MM/yyyy")
                        </td>
                        <td class="hidecol">
                            @Html.ActionLink("Edit", "Edit", new { id = item.id }, new { @class = "btn btn-warning btn-xs" })
                            |
                            @Html.ActionLink("Delete", "DeleteConfirmed", new { id = item.id }, new { onclick = "return confirm('Are you sure you wish to delete this printer chalan?');", @class = "btn btn-danger btn-xs" })
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
