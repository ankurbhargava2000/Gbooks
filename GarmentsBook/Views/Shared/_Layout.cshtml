    <style type="text/css">
        div.dt-buttons {
            position: relative;
            float: left !important;
            margin-top: -1px !important;
            
        }
        .crimsonred {
            color: rgb(243, 83, 105) !important;
        }

        #companyDetails {
            position: absolute;
            top: 5px;
            left: 50%;
            font-weight: 400;
        }

            #companyDetails h4 {
                font-weight: 400;
            }

